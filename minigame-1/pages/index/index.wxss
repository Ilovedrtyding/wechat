/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-image: "heart.png"
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.sticker {
  position: absolute;
  width: 100%;
  height: auto;
  top: 0;
  left: 0;
  z-index: -1; /* 将贴纸置于背景之下 */
}
.sticker1 {
  position: absolute;
  width: 100%;
  height: auto;
  top: 0;
  left: 0;
  z-index: -2; /* 将贴纸置于背景之下 */
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 0px;
  background: linear-gradient(to right, #ff3366, #66ff33);
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.rainbow-text {
  font-size: 16px;
  background: -webkit-linear-gradient(45deg, violet, indigo, blue, green, yellow, orange, red);
  -webkit-background-clip: text;
  color: transparent;
  display: inline-block;
}


.cute-text {
  font-family:  sans-serif;
  font-size: 16px;
  color: #ff6699;
}
